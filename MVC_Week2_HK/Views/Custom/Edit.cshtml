@using (Html.BeginForm("UpdateBatch", "Custom"))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="批次更新" />
    
    <h4>客戶銀行資訊</h4>
    <table class="table">
        <tr>
            <th>
                銀行名稱
            </th>
            <th>
                銀行代碼
            </th>
            <th>
                分行代碼
            </th>
            <th>
                帳戶名稱
            </th>
            <th>
                帳戶號碼
            </th>

        </tr>

        @for (var i = 0; i < bank.Length; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => bank[i].銀行名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bank[i].銀行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bank[i].分行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bank[i].帳戶名稱)
                </td>
                <td>
                    @Html.EditorFor(modelItem => bank[i].帳戶號碼)
                </td>
                @Html.HiddenFor(modelItem => bank[i].Id);

            </tr>
        }

    </table>
    <h4>客戶聯絡人</h4>
    <table class="table">
        <tr>
            <th>
                職稱
            </th>
            <th>
                姓名
            </th>
            <th>
                Email
            </th>
            <th>
                手機
            </th>
            <th>
                電話
            </th>

        </tr>

        @for (var i = 0; i < contact.Length; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => contact[i].職稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact[i].姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact[i].Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact[i].手機)
                </td>
                <td>
                    @Html.EditorFor(modelItem => contact[i].電話)
                </td>
                @Html.HiddenFor(modelItem => contact[i].Id);

            </tr>
        }

    </table>
}
